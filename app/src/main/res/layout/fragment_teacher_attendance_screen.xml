<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".TeacherAttendanceScreenFrag">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Take Your Attendance"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:padding="10dp"
            android:textColor="@color/Mahroon"
            android:fontFamily="sans-serif-black"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Face Verification"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:padding="10dp"
            android:textColor="@color/Mahroon"
            android:fontFamily="sans-serif-black"
            android:layout_marginTop="10dp"
            />

        <ImageView
            android:id="@+id/imageFromDatabase"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/profile"
            />

        <Button
            android:id="@+id/btn_verify"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Verify"
            android:padding="15dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/white"
            android:background="@drawable/custom_signup_btn"
            />

    </LinearLayout>

</RelativeLayout>