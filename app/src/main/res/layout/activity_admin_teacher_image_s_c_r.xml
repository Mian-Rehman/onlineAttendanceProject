<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminTeacherImageSCR">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="@color/Mahroon"
            android:gravity="start|center"

            >


            <ImageView
                android:id="@+id/admin_teacherImage_back"
                android:layout_width="26sp"
                android:layout_height="26dp"
                android:src="@drawable/ic_back_white"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Image"
                android:textSize="18sp"
                android:fontFamily="sans-serif-black"
                android:textColor="@color/white"
                android:layout_marginLeft="20dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center|top"
            android:padding="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Teacher Image"
                android:textSize="18sp"
                android:textAlignment="center"
                android:textColor="@color/Mahroon"
                android:fontFamily="sans-serif-black"
                android:padding="10dp"
                android:gravity="center_horizontal" />

            <ImageView
                android:id="@+id/img_teacher"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/profile"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="20dp"
                >

                <Button
                    android:id="@+id/btn_gallery"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/custom_login_button"
                    android:text="Gallery"
                    android:textColor="@color/Mahroon" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_upload"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="Upload"
                android:visibility="invisible"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:background="@drawable/custom_signup_btn"
                />


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>