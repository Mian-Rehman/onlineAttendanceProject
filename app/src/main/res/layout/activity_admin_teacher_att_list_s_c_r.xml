<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".AdminTeacherAttListSCR">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@color/Mahroon"
        android:gravity="start|center"

        >


        <ImageView
            android:id="@+id/st_att_back"
            android:layout_width="26sp"
            android:layout_height="26dp"
            android:src="@drawable/ic_back_white"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TeacherAttendance List"
            android:textSize="18sp"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="start|center"

        >


        <EditText
            android:id="@+id/ed_date"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Enter Date i.e 'Nov 22'"
            android:textColorHint="@color/Grey"
            android:layout_marginRight="5dp"
            android:textColor="@color/Mahroon"

            />

        <Button
            android:id="@+id/btn_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search"
            android:textColor="@color/Mahroon"
            android:background="@drawable/custom_login_button"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="start|center"

        >
        <Button
            android:id="@+id/btn_pdf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search"
            android:visibility="invisible"
            android:textColor="@color/Mahroon"
            android:background="@drawable/custom_login_button"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="25dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_showAllAtt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp" />

    </LinearLayout>

</LinearLayout>